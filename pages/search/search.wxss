.searchContainer{
    width: 100%;
}

/* 搜索栏 */
.search{
    display: flex;
    height: 60rpx;
    margin: 10rpx 20rpx 0 20rpx;
    position: relative;
}
.search >.iconfont{
    background-color: rgb(246, 246, 246);
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
    padding-left: 30rpx;
}
.search text{
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
}
.search input{
    flex: 1;
    height: 100%;
    margin-right: 20rpx;
    background-color: rgb(246, 246, 246);
    border-top-right-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.searchInfo{
    width: 100%;
    height: auto;
    position: absolute;
    left: 0;
    bottom: -830rpx;
    display: flex;
    flex-direction: column;
    border-top:1px solid #fefefe;
    background-color: #f0f0f0;
}
.searchInfo text{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #fefefe;
}

.searchInfo text{
    font-size: 24rpx;
    padding-left: 20rpx;
}
/* 热门搜索词 */
.searchHot{
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 20rpx;
}

.searchHot .hotTitle{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid rgb(231, 231, 231);
}

.searchHot .hotInfo{
    display: flex;
    flex-wrap: wrap;
    font-size: 24rpx;
    padding: 0 20rpx;
}
.searchHot .hotInfo view{
    width: 50%;
    margin-top: 60rpx;
}
.searchHot .hotInfo view .iconfont{
    color: rgb(241, 14, 14);
    font-size: 26rpx;
    margin-left: 8rpx;
}