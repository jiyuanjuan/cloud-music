/* 轮播图 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 图标导航栏目 */
.navContainer {
    height: auto;
    display: flex;
    font-size: 24rpx;
    text-align: center;
    justify-content: space-around;
}

.navContainer .navItem {
    flex: 1;
    box-sizing: border-box;
    padding: 25rpx;
}

.navContainer .navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50%;
    background-color: rgb(243, 19, 19);
    margin-bottom: 20rpx;
    font-size: 52rpx;
    color: #fefefe;
}

/* 推荐内容区域 */
.recommendScroll {
    display: flex;
    flex-wrap: nowrap;
    height: 300rpx;
    padding: 20rpx;
}

.recommendScroll .scrollItem {
    margin-right: 20rpx;
}

.recommendScroll .scrollItem image {
    width: 200rpx;
    height: 200rpx;
}

.recommendScroll .scrollItem text {
    width: 100%;
    font-size: 24rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /*设置对其模式*/
    -webkit-line-clamp: 2;
    /*设置多行的行数*/
}

/* 排行榜 */
.topListContainer {
    display: flex;
    width: 100%;
}
.topTitle{
    display: inline-block;
    margin-bottom: 20rpx;
}
.topListSwiper {
    width: 100%;
    height: 900rpx;
    padding: 20rpx;
}
.topListSwiper .topSwiperItem .itemInfo{
    display: flex;
    margin-bottom: 20rpx;
}
.topListSwiper .topSwiperItem .itemInfo text {
    height: 150rpx;
    line-height: 150rpx;
    margin-left: 50rpx;
}

.topListSwiper .topSwiperItem .itemInfo image {
    width: 150rpx;
    height: 150rpx;
}