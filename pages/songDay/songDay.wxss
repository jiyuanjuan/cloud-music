.songList {
    width: 100%;
}

/* 顶部图片 */
.banner {
    position: relative;
}

.banner image {
    width: 100%;
    height: 360rpx;
}

.banner text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* 播放全部标题 */
.list {
    width: 100%;
    padding: 10rpx;
    box-sizing: border-box;
}

.list .title {
    display: flex;
    justify-content: space-between;
}

/* 列表 */
.list .songs {
    margin-top: 20rpx;
    height: 900rpx;
}

.list .songs .songsMain {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.list .songs .songInfo {
    display: flex;
    align-items: center;
}

.list .songs .songInfo image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}

.list .songs .songInfo view {
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
    font-size: 24rpx;
}