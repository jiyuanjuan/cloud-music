<view class="songList">
    <view class="banner">
        <image src="/static/images/recommendSong/recommendSong.jpg"></image>
        <text>{{month}}月{{day}}日</text>
    </view>
    <view class="list">
        <view class="title">
            <text>播放全部</text>
            <text>多选</text>
        </view>
        <scroll-view class="songs" scroll-y enable-flex>
            <view class="songsMain" wx:for="{{list}}" wx:key="index">
                <view class="songInfo" data-ids="{{item.id}}" bindtap="toSongDetail">
                    <image src="{{item.album.blurPicUrl}}"></image>
                    <view>
                        <text>{{item.name}}</text>
                        <text>{{item.artists[0].name}}</text>
                    </view>
                </view>
                <text class="iconfont icon-androidgengduo"></text>
            </view>
        </scroll-view>
    </view>
</view>