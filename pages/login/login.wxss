.loginContainer {
    width: 100%;
    padding: 90rpx 30rpx;
    box-sizing: border-box;
}

.loginContainer .loginTitle {
    font-size: 66rpx;
    margin-left: 50rpx;
}

.loginContainer .loginMain {
    margin-top: 100rpx;
    font-size: 24rpx;
}

.loginContainer .loginMain .item {
    background-color: rgb(247, 247, 247);
    margin: 30rpx auto;
    padding: 10rpx 30rpx;
    width: 80%;
    border-radius: 30rpx;
}

.loginContainer .loginMain .loginButton {
    width: 90%;
    font-size: 24rpx;
    margin-top: 70rpx;
    border-radius: 30rpx;
    background-color: rgb(238, 13, 13);
    color: #fefefe;
}

.loginContainer .findPwd {
    display: block;
    width: 100%;
    text-align: center;
    color: rgb(37, 119, 241);
    margin:30rpx auto;
    font-size: 24rpx;
}